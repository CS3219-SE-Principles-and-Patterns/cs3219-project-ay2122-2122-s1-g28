{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "quotes": ["error", "double"],
        "eqeqeq": "off",
        "no-else-return": "off",
        "consistent-return": "off",
        "prefer-destructuring": "off",
        "no-underscore-dangle": "off",
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "no-console": "off",
        "dot-notation": "off",
        "arrow-body-style": ["error", "always"],
        "no-param-reassign": "off",
        "global-require": "off",
        "func-names": ["error", "never"],
        "no-undef": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-continue": "off",
        "no-confusing-arrow": ["error", {"allowParens": true}],
        "no-nested-ternary": "off",
        "no-unused-vars": ["error", { "vars": "global" }]
    }
}

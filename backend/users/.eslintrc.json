{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "quotes": ["error", "double"],
        "eqeqeq": "off",
        "no-else-return": "off",
        "consistent-return": "off",
        "prefer-destructuring": "off",
        "no-underscore-dangle": "off",
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "no-console": "off",
        "dot-notation": "off",
        "arrow-body-style": ["error", "always"],
        "no-param-reassign": "off",
        "global-require": "off"
    }
}
